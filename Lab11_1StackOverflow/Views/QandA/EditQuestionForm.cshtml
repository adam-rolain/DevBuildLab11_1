@model Question
@{
    ViewData["Title"] = "EditQuestionForm";
}

<h1>Edit Question</h1>

<form method="post" action="/QandA/EditQuestion">
    <input name="Id" value="@Model.Id" hidden/>
    <input name="UserId" value="@DAL.CurrentUser.Id" hidden/>
    Question Header: <input type="text" name="Title" value="@Model.Title"/><br /><br />
    Question: <input type="text" name="Detail" value="@Model.Detail"/><br /><br />
    <input name="Posted" value="@Model.Posted" hidden/>
    Category: <input type="text" name="Category" value="@Model.Category"/><br /><br />
    Tags: <input type="text" name="Tags" value="@Model.Tags"/><br /><br />
    <input type="submit" class="btn btn-primary" value="Submit"/><br />
</form>

<br />
<a href="/QandA/DeleteQuestion?QuestionId=@Model.Id" class="btn btn-danger">Delete</a>